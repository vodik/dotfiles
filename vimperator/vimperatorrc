set toolbars=noaddons,nobookmarks,nomenu,nonavigation,tabs
set noscrollbars

set showstatuslinks=1
set nofocuscontent
set smartcase
set incsearch
set history=1000

set! browser.tabs.closeButtons=2
set! browser.tabs.closeWindowWithLastTab=false
set! browser.download.manager.showWhenStarting=false
set! plugins.hide_infobar_for_missing_plugin=true

noremap j 7j
noremap k 7k

map s :open google 
map S :tabopen google 

command! -nargs=1 imgur tabopen http://i.imgur.com/<args>

" vim: ft=vimperator
