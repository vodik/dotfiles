#!/bin/bash

# Depends on curl, python, python-pygments

sprunge_usage() {
  cat << HERE
Usage:
  sprunge [files]
  sprunge < file
  piped_data | sprunge

Upload data and fetch URL from the pastebin http://sprunge.us.
HERE
}

# use python to attempt to detect the syntax
sprunge_syntax() {
  echo "try:
	from pygments.lexers import get_lexer_for_filename
	print(get_lexer_for_filename('$1').aliases[0])
except:
	print('text')" | python
}

sprunge() {
  curl -s -F 'sprunge=<-' http://sprunge.us
}

declare -a urls=()

if [[ $1 == '-h' || $1 == '--help' ]]; then
  # print usage information
  sprunge_usage
  exit 0
elif [[ ! -t 0 || $# -eq 0 ]]; then
  # read from stdin
  url=$(cat | sprunge)
  urls=("${url/ /}?text")
 else
   # treat arguments as a list of files to upload
   for file in $@; do
     if [[ ! -f "$file" ]]; then
       echo "$file isn't a file" >&2
       continue
     fi

     syntax=$(sprunge_syntax "$file")
     url=$(sprunge < "$file")
     urls+=("${url/ /}?$syntax")
   done
fi

# output each url on its own line
for url in "${urls[@]}"; do
  echo "$url"
done

# don't copy to clipboad if piped
if [[ -t 1 ]]; then
  echo -n "${urls[@]}" | xclip -sel primary
  echo -n "${urls[@]}" | xclip -sel clipboard
fi
